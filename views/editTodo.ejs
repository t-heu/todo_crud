<%- include('head') %>
<%- include('header') %>

<header class="header">
  <small class="header__text">Editar cliente.</small>
</header>

<main class="file-input">
  <div>
    <form class="todos" action="/edit/<%= data.id %>" method="post" enctype="application/x-www-form-urlencoded">
      <div class="todo">
        <b>Código: </b>
        <input name="code" value="<%= data.code %>" />
      </div>
      <div class="todo">
        <b>Razão social: </b>
        <input name="corporate_name" value="<%= data.corporate_name %>" />
      </div>
      <div class="todo">
        <b>Nome: </b>
        <input name="name" value="<%= data.name %>" />
      </div>
      <div class="todo">
        <b>Filial: </b>
        <select name="branch">
          <%- include('optionsBranch', { data }) %>
        </select>
      </div>
      
      <div class="todo">
        <button class="btn_edit">ATUALIZAR</button>
        
       <form action="/delete/<%= data.id %>" method="post" enctype="application/x-www-form-urlencoded">
          <button class="btn_delete">DELETAR</button>
        </form>
      </div>
    </form>
  </div>
</main>

<%- include('footer') %>